extends ../layouts/default.pug

mixin clubs(clubname)
    .frame
        img(src="images/grey-triangles.jpg" alt="grey triangle")
        p.title=clubname 
            |<br>SOCIETY

block append variables
    - var currentPage="index";
    - var siteTitle = "HomePage Yo"; //- is this declaration put here?

block content
    //- first row
    .row.watch-video
        .col-md-5
            img(src="images/grey-triangles.jpg" alt="grey triangle")
        .col-md-7.busyness
            p Admist the busyness of school life, SJC STEAM Lab provides the space for us to #[span Break the Cycle, Rise Above, Focus on Science]
            a(href="#!") 
                span WATCH 
                span.fas.fa-play-circle
    
    //- second row
    .row.clubs
        .col-md-4
            +clubs("COMPUTER")
        .col-md-4
            +clubs("MATHEMATICS")
        .col-md-4
            +clubs("SCIENCE")
        
    //- third row
    .row.learn-more
        .col-md-7
            ul.list-unstyled
                li 
                    a(href="#!") LEARN MORE
                li 
                    a(href="#!")
                        span.fas.fa-file
                        span More about the Lab
                li                     
                    a(href="#!") 
                        span.fas.fa-lock
                        span More about the students in the space
                li                     
                    a(href="#!")
                        span.fas.fa-folder-open
                        span Current Projects
                li                
                    a(href="#!") 
                        span.fas.fa-wifi
                        span Contact Us
                li 
                    a(href="#!") READ MORE
                
        .col-md-5
            img(src="images/grey-triangles.jpg" alt="grey triangle")
